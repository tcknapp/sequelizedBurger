<div class="jumbotron">
  <div class="container text-center">

    <h1>BURGER ME!</h1>
    <img src="../assets/img/burgerimg.png">
    <h2>Make a Burger, Eat a Burger</h2>

  </div>
</div>
<div class="container">
  <div class="row text-center">
    <div class="col-xs-12">

      <!--Add Burger Form-->
      <h3>Make Burger</h3>

      <form class="create-form">
        <div class="form-group">
          <input type="text" id="burg" name="name" placeholder="Add Burger">
        </div>
        <button type="submit" class="btn btn-danger btn-lg">Create Burger</button>
      </form>
</div>

    </div>

  </div>

  <!--To Devour-->
  <div class="row text-center">
    <div class="col-xs-6">
      <h2>Burgers Waiting...</h2>
      <!--HB-->
      <ul>
        {{#each burgers}}
        {{#unless devoured}}
       <p> {{> burgers/burger-block devoured=true }} </p>
        {{/unless}}
        {{/each}}
      </ul>

    </div>


    <!--Already Devoured-->
    <div class="col-xs-6">
      <h2>Burgers Devoured!</h2>
      <!--HB-->
      <ul>
        {{#each burgers}}
        {{#if devoured}}
        <p> {{ burger_name }} </p>
        {{/if}}
        {{/each}}
      </ul>

    </div>
  </div>
</div> <br><br>
<footer class="container-fluid text-center">TK 2018</footer>